{
    "configurations": [
        {
            "type": "command",
            "name": "Build",
            "program": "c++",
            "args": ["-Isrc/Include",
                     "-Lsrc/Lib",
                     "-o",
                     "$FILE_NAME_NO_EXT$.exe",
                     "$FILE$",
                     "-lmingw32",
                     "-lSDL2main",
                     "-lSDL2"
            ]
        },
        {
            "type": "command",
            "name": "Run",
            "program": "$FILE_DIR$\\$FILE_NAME_NO_EXT$.exe"
        }
    ]
}
